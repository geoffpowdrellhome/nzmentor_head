<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jee="http://www.springframework.org/schema/jee"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<jee:jndi-lookup id="faregateConfigurationLocation" jndi-name="faregate/faregate-configuration" expected-type="java.lang.String" />

	<bean id="faregateConfigurationResourceFactory" class="com.nz.travel.mentor.util.FileResourceFactory">
		<property name="location" ref="faregateConfigurationLocation" />
	</bean>

	<bean id="faregateConfigurationResource" factory-bean="faregateConfigurationResourceFactory" factory-method="findResource" />

</beans>