<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="mentorPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.travel.mentor.model.impl.User</class>

        <class>com.travel.mentor.type.impl.AccommodationSiteType</class>
        <class>com.travel.mentor.type.impl.ActivitySiteType</class>
        <class>com.travel.mentor.type.impl.RoomConfigurationType</class>
        <class>com.travel.mentor.type.impl.RoomType</class>

        <properties>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider"/>
            <property name="hibernate.generate_statistics" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="0"/>
        </properties>
    </persistence-unit>

</persistence>